  "assets": [
    {"source":"./src/images", "destination": "./www/images"},
    {"source":"./src/locales.json", "destination": "./www/locales.json", "watch": true},
    {"source":"./src/locales.json", "destination": "./public/locales.json", "watch": true}
  ]
}
